
extends layout
block content

  .header
    .icon 
      include ../svg/logo.svg
    .copy
      .title #{self.config.meta.title}
      .description #{self.config.meta.description}
    .clear

  .outputs

    .line

    .output.ppl
      .icon
        include ../svg/light59.svg
      .label Pound Per Light
      .value 
        span.d 
        span.v 0

    .output.cpc
      .icon
        include ../svg/dollar178.svg
      .label Cost Per Crop
      .value
        span.d $
        span.v 0

    .output.cpp
      .icon
        include ../svg/imbalanced.svg
      .label Cost Per Pound
      .value
        span.d $
        span.v 0

    .output.ppc
      .icon
        include ../svg/dollarsign1.svg
      .label Profit Per Crop
      .value
        span.d $
        span.v 0

    .output.ppp
      .icon
        include ../svg/hand210.svg
      .label Profit Per Pound
      .value
        span.d $
        span.v 0

    .output.ipy
      .icon
        include ../svg/dollar147.svg
      .label Income per year
      .value
        span.d $
        span.v 0


  .inputs

    .group.left

      .input.lir
        .label Number of Lights in Room
        .tinput
          input(type='number',placeholder='6',value=6)
      .clear

      .input.cpy
        .label Number of crops produced a year
        .tinput
          input(type='number',value='5.0')
      .clear

      .input.meb
        .label Average monthly Electricity Bill
        .tinput
          input.larger(type='number',value='500.00')
      .clear

      .input.snc
        .label Soil and Nutrient cost per crop
        .tinput
          input(type='number',value='500.00')
      .clear

    .group.right

      .input.rpm
        .label Rent per Month
        .tinput
          input(type='number',value='1000.00')
      .clear

      .input.mcp
        .label Misc Cost Per Crop
        .tinput
          input(type='number',value='1000.00')
      .clear

      .input.lpc
        .label Pounds Per Crop
        .tinput
          input(type='number',value='10')
      .clear

      .input.spp
        .label Sale Price Per Pound
        .tinput
          input(type='number',value='2500.00')
      .clear

  script(type='text/javascript').
    function loadercomplete() {
      Loader.load('./jst/i.js', 'I');
    }
